<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drinkjournal.drinkjournal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrinkJournal">
        <activity
            android:name="com.drinkjournal.activity.MyJournalActivity"
            android:exported="false" />
        <activity
            android:name="com.drinkjournal.activity.DrinkView"
            android:exported="false" />
        <activity
            android:name="com.drinkjournal.activity.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.drinkjournal.activity.NewDrinkActivity"
            android:exported="false" />
        <activity
            android:name="com.drinkjournal.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>